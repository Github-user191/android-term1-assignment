<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutMeScreen">

    <Button
        android:id="@+id/aboutMeBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Button"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="34dp"
        tools:text="Back" />

    <TextView
        android:id="@+id/aboutMeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="About Me" />

    <ImageView
        android:id="@+id/aboutMeImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        tools:layout_editor_absoluteX="281dp"
        tools:layout_editor_absoluteY="170dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="202dp"
        android:layout_height="283dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/content_border"
        android:fontFamily="@font/poppins"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Add the title My profile or About Me to show what the screen is all about. Be sure to add your selfie. Preferably passport size. Or showing clearly the face. Add details about you as suggested in the wire frame. You may add any other things rather than the suggested parts. Make sure you have a scroll option on this screen. Make sure the font is good enough." />

</androidx.constraintlayout.widget.ConstraintLayout>