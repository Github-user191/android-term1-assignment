<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherScreen">

    <TextView
        android:id="@+id/launcherTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"

        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:letterSpacing="-0.03"

        android:rotationX="0"
        android:text="Muhammed Luqmaan\nCode Space"
        android:textColor="@android:color/background_dark"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/launcherVisitorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@android:color/background_dark"
        android:letterSpacing="0.01"
        android:text="Visitor's name:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launcherTitleTextView"
     />


    <EditText
        android:id="@+id/launcherVisitorNameEditText"
        android:layout_width="336dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_user_icon"
        android:drawableLeft="@drawable/custom_user_icon"
        android:drawablePadding="13dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launcherVisitorNameTextView" />

    <Button
        android:id="@+id/launcherNextBtn"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="108dp"
        android:textAllCaps="false"
        android:letterSpacing="-.01"
        android:backgroundTint="@color/primary_blue_700"
        android:fontFamily="@font/poppins"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launcherVisitorNameEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>