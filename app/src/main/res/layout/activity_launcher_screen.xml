<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherScreen">


    <TextView
        android:id="@+id/launcherTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"

        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:letterSpacing="-0.03"

        android:rotationX="0"
        android:text="Muhammed Luqmaan\nCode Space"
        android:textColor="@android:color/background_dark"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/launcherVisitorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/poppins_semibold"
        android:letterSpacing="0.01"
        android:text="Visitor's name:"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launcherTitleTextView" />

    <EditText
        android:id="@+id/launcherVisitorNameEditText"
        android:layout_width="280dp"
        android:layout_height="61dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_user_icon"
        android:drawableLeft="@drawable/custom_user_icon"
        android:drawablePadding="13dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launcherVisitorNameTextView" />

    <Button
        android:id="@+id/launcherNextBtn"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/poppins"
        android:letterSpacing="0"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launcherVisitorNameEditText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/launcherVisitorNameErrorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Please enter a value"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/launcherVisitorNameEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launcherVisitorNameTextView"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>